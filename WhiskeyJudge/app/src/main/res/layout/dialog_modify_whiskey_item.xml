        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        app:srcCompat="@drawable/whiskey_jar"
        tools:src="@drawable/whiskey_jar" />
